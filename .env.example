# OpenAI-powered Intent Matching System Configuration
# Copy this file to .env and update with your actual values

# REQUIRED: OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# Confidence threshold for intent matching (0.0 - 1.0)
# Higher values = more strict matching, lower false positives
# Lower values = more permissive matching, higher recall
CONFIDENCE_THRESHOLD=0.85

# Index storage location
INDEX_DIR=./models

# Logging configuration
LOG_LEVEL=WARNING
VERBOSE_LOGGING=false

# Server configuration (for API if needed)
API_HOST=127.0.0.1
API_PORT=8000

# Variable extraction confidence thresholds
VARIABLE_CONFIDENCE_THRESHOLD=0.8
CONTEXT_REQUIRED_THRESHOLD=0.9

# Query processing limits
MAX_SIMILAR_INTENTS=5
DEFAULT_SEARCH_RESULTS=50

# Legacy embedding model (fallback only if no OpenAI key)
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
